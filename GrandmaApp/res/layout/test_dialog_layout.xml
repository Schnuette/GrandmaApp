<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/eatBreakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Essenswunsch: Frühstück" />

        <Button
            android:id="@+id/eatLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Essenswunsch: Mittagessen" />

        <Button
            android:id="@+id/eatSupper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Essenswunsch: Abendbrot" />

        <Button
            android:id="@+id/drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Getränkewunsch" />

        <Button
            android:id="@+id/medsMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medizinwunsch: Morgens" />

        <Button
            android:id="@+id/medsEvening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medizinwunsch: Abends" />

        <Button
            android:id="@+id/shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einkaufswunsch" />

        <Button
            android:id="@+id/cleanFlat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aufräumwunsch" />

        <Button
            android:id="@+id/suitUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ankleidewunsch" />

        <Button
            android:id="@+id/washDishes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geschirrspülwunsch" />

        <Button
            android:id="@+id/washClothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kleindungswaschwunsch" />

        <Button
            android:id="@+id/game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spielwunsch" />

        <Button
            android:id="@+id/sleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schlafenswunsch" />

    </LinearLayout>

</ScrollView>
